@model AssignmentPS42054.Models.Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            font-weight: bold;
        }
        .form-group input[type="text"],
        .form-group input[type="file"],
        .form-group input[type="number"],
        .form-group input[type="date"],
        .form-group select {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        .form-group .text-danger {
            color: red;
            margin-top: 5px;
            display: block;
        }
        .form-actions {
            text-align: center;
        }
        .form-actions button {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .form-actions button:hover {
            background-color: #0056b3;
        }
        .img-preview {
            text-align: center;
            margin-top: 10px;
        }
        .img-preview img {
            max-width: 150px;
            height: auto;
            display: block;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Edit Product</h1>
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" id="Id" name="Id" value="@Model.Id" />
            
            <!-- Lưu lại giá trị của ảnh nếu không thay đổi -->
            <input type="hidden" asp-for="ProductImage" />

            <div class="form-group">
                <label for="Name">Product Name</label>
                <input type="text" id="Name" name="Name" value="@Model.Name" required />
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Price">Price</label>
                <input type="number" id="Price" name="Price" value="@Model.Price" required />
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Quantity">Quantity</label>
                <input type="number" id="Quantity" name="Quantity" value="@Model.Quantity" required />
                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="CreateDate">Create Date</label>
                <input type="date" id="CreateDate" name="CreateDate" value="@Model.CreateDate.ToString("yyyy-MM-dd")" required />
                @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Description">Description</label>
                <input type="text" id="Description" name="Description" value="@Model.Description" />
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="CategoryId">Category</label>
                <select id="CategoryId" name="CategoryId" required>
                    <option value="1">Áo</option>
                    <option value="2">Quần</option>
                    <option value="7">Hoodie</option>
                    <option value="12">Giày</option>
                    <option value="13">Balo</option>
                </select>

                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Review">Review</label>
                <input type="number" id="Review" name="Review" value="@Model.Review" min="0" max="5" step="1" required />
                @Html.ValidationMessageFor(model => model.Review, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="FileImage">Main Image</label>
                <!-- Hiển thị ảnh hiện tại -->
                <input type="hidden" asp-for="ProductImage" />
                @if (!string.IsNullOrEmpty(Model.ProductImage))
                {
                    <img src="~/image/sanpham/@Model.ProductImage" width="150px" />
                }
                <input name="FileImage" class="form-control" type="file" />
                @Html.ValidationMessageFor(model => model.ProductImage, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Image1">Image 1</label>
                <input type="hidden" asp-for="Image1" />
                @if (!string.IsNullOrEmpty(Model.Image1))
                {
                    <img src="~/image/sanpham/@Model.Image1" width="150px" />
                }
                <input name="Image1" class="form-control" type="file" />
                @Html.ValidationMessageFor(model => model.Image1, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Image2">Image 2</label>
                <input type="hidden" asp-for="Image2" />
                @if (!string.IsNullOrEmpty(Model.Image2))
                {
                    <img src="~/image/sanpham/@Model.Image2" width="150px" />
                }
                <input name="Image2" class="form-control" type="file" />
                @Html.ValidationMessageFor(model => model.Image2, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Image3">Image 3</label>
                <input type="hidden" asp-for="Image3" />
                @if (!string.IsNullOrEmpty(Model.Image3))
                {
                    <img src="~/image/sanpham/@Model.Image3" width="150px" />
                }
                <input name="Image3" class="form-control" type="file" />
                @Html.ValidationMessageFor(model => model.Image3, "", new { @class = "text-danger" })
            </div>

            <div class="form-actions">
                <button type="submit">Update</button>
            </div>
        </form>
    </div>
</body>
</html>
