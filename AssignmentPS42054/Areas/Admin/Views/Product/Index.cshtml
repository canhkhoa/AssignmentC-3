@model IEnumerable<AssignmentPS42054.Models.Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 10px;
                text-align: left;
                border: 1px solid #ddd;
            }

            .table th {
                background-color: #f2f2f2;
            }

            .table td img {
                display: block;
                max-width: 100px;
                height: auto;
            }

            .table tr:hover {
                background-color: #f9f9f9;
            }

        a {
            display: inline-block;
            margin-bottom: 10px;
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .no-image {
            color: #888;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Products</h1>
        <p>
            @Html.ActionLink("Create", "Create", new { area = "Admin" })
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Create Date</th>
                    <th>Description</th>
                    <th>Main Image</th>
                    <th>Category</th>
                    <th>Image 1</th>
                    <th>Image 2</th>
                    <th>Image 3</th>
                    <th>Review</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                        <td>@product.Quantity</td>
                        <td>@product.CreateDate.ToString("yyyy-MM-dd")</td>
                        <td>@product.Description</td>
                        <td>
                            @if (!string.IsNullOrEmpty(product.ProductImage))
                            {
                                <img src="../image/sanpham/@product.ProductImage" alt="@product.Name">
                            }
                            else
                            {
                                <span class="no-image">No image available</span>
                            }
                        </td>
                        <td>@product.CategoryId</td>
                        <td>
                            @if (!string.IsNullOrEmpty(product.Image1))
                            {
                                <img src="../image/sanpham/@product.Image1" alt="@product.Name">
                            }
                            else
                            {
                                <span class="no-image">No image available</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(product.Image2))
                            {
                                <img src="../image/sanpham/@product.Image2" alt="@product.Name">
                            }
                            else
                            {
                                <span class="no-image">No image available</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(product.Image3))
                            {
                                <img src="../image/sanpham/@product.Image3" alt="@product.Name">
                            }
                            else
                            {
                                <span class="no-image">No image available</span>
                            }
                        </td>
                        <td>@product.Review</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { area = "Admin", id = product.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { area = "Admin", id = product.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
